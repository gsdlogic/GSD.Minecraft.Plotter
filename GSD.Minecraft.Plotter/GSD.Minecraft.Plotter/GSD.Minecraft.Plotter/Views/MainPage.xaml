<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GSD.Minecraft.Plotter.Views"
             x:Class="GSD.Minecraft.Plotter.Views.MainPage">
  <Grid>
    <views:MapView x:Name="MapView" />
    <StackLayout Orientation="Vertical" Padding="10" BackgroundColor="#AA000000" HorizontalOptions="Start" VerticalOptions="Start">
      <Label Text="{Binding MapDrawable.Zoom, Source={x:Reference MapView}, StringFormat='Zoom: {0:F2}'}" TextColor="White" />
      <Label Text="{Binding MapDrawable.CenterX, Source={x:Reference MapView}, StringFormat='OffsetX: {0:F0}'}" TextColor="White" />
      <Label Text="{Binding MapDrawable.CenterY, Source={x:Reference MapView}, StringFormat='OffsetY: {0:F0}'}" TextColor="White" />
      <Label Text="{Binding MapDrawable.Points.Count, Source={x:Reference MapView}, StringFormat='POIs: {0}'}" TextColor="White" />
    </StackLayout>
  </Grid>
</ContentPage>