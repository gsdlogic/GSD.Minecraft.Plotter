<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GSD.Minecraft.Plotter.Views"
             x:Class="GSD.Minecraft.Plotter.Views.WorldsPage"
             Shell.NavBarIsVisible="False">
  <StackLayout Padding="10">
    <CollectionView ItemsSource="{Binding Worlds}">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Frame Padding="10" Margin="5" BackgroundColor="#222">
            <StackLayout Orientation="Horizontal">
              <Label Text="{Binding Name}" TextColor="White" VerticalOptions="Center" />
              <Button Text="Select" Command="{Binding Source={RelativeSource AncestorType={x:Type views:WorldsPage}}, Path=BindingContext.SelectWorldCommand}" CommandParameter="{Binding .}" HorizontalOptions="End" />
            </StackLayout>
          </Frame>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
    <Button Text="Create New World" Command="{Binding CreateWorldCommand}" />
  </StackLayout>
</ContentPage>