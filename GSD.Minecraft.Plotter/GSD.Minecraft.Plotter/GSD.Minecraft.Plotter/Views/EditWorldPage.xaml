<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GSD.Minecraft.Plotter.ViewModels"
             x:Class="GSD.Minecraft.Plotter.Views.EditWorldPage"
             x:DataType="viewModels:EditWorldPageViewModel">

  <VerticalStackLayout Padding="20" Spacing="15">

    <Label Text="Marker Name" />
    <Entry Text="{Binding World.Name}" />

    <Label Text="Seed" />
    <Entry Text="{Binding World.Seed}" />

    <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="10">
      <Button Grid.Column="0" Text="Delete" BackgroundColor="Red" Command="{Binding DeleteCommand}" />
      <Button Grid.Column="2" Text="Save" Command="{Binding SaveCommand}" />
      <Button Grid.Column="3" Text="Cancel" BackgroundColor="Gray" Command="{Binding CancelCommand}" />
    </Grid>

  </VerticalStackLayout>

</ContentPage>