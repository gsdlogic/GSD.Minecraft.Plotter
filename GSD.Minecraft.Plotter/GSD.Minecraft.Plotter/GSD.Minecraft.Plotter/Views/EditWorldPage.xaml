<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GSD.Minecraft.Plotter.ViewModels"
             x:Class="GSD.Minecraft.Plotter.Views.EditWorldPage"
             x:DataType="viewModels:EditWorldPageViewModel">

  <VerticalStackLayout Padding="20" Spacing="15">

    <Label Text="Marker Name" />
    <Entry Text="{Binding World.Name}" />

    <Label Text="Seed" />
    <Entry Text="{Binding World.Seed}" />

    <HorizontalStackLayout Spacing="10">
      <Button Text="Save" Command="{Binding SaveCommand}" />
      <Button Text="Cancel" Command="{Binding CancelCommand}" />
      <Button Text="Delete" BackgroundColor="Red" Command="{Binding DeleteCommand}" />
    </HorizontalStackLayout>

  </VerticalStackLayout>

</ContentPage>