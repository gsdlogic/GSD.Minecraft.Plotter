<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="GSD.Minecraft.Plotter.Views.AppShell"
       xmlns:views="clr-namespace:GSD.Minecraft.Plotter.Views"
       FlyoutBehavior="Disabled"
       Title="Minecraft Plotter">

  <TabBar>
    
    <ShellContent Title="Map"
                  ContentTemplate="{DataTemplate views:MapPage}"
                  Route="MapPage" />

    <ShellContent Title="Markers"
                  ContentTemplate="{DataTemplate views:MarkersPage}"
                  Route="MarkersPage" />

    <ShellContent Title="Worlds"
                  ContentTemplate="{DataTemplate views:WorldsPage}"
                  Route="WorldsPage" />

</TabBar>
</Shell>